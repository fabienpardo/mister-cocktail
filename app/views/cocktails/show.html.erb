<div class="fullpage">
  <div class="content text-center">
    <h1 class="title_page"><%= @cocktail.name %></h1>
      <% @cocktail.doses.each do |dose| %>
      <ul class="content_page title_article list-unstyled list-inline">
        <li><%= dose.description %> <%= dose.ingredient.name %></li>
        <li><%= link_to "Delete", dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %></li>
      </ul>
      <% end %>
    <%= link_to "Back", cocktails_path, class: 'link_page btn btn-primary' %>
    <%= link_to 'Dose-moi !', new_cocktail_dose_path(@cocktail), class: 'link_page btn btn-warning' %>
  </div>
</div>